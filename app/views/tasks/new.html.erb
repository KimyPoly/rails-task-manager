<div class = "border border-2 m-5 p-5 align-items-center justify-content-center " style="background-color:white; height: 50%; width: 60%" >
  <h1>New task</h1>
  <div class="p-3 align-items-center">
   <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
      <br>
      <div class="btn btn-dark">
        <%=  f.submit   %>
      </div>
    <% end %>
  </div>

</div>
