<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p>
  <i class="fa-solid fa-circle-left"></i>
  <%= link_to "All my tasks", '/tasks' %>
</p>

<p>
  <i class="fa-solid fa-pen-to-square"></i>
  <%= link_to "Edit task", "/tasks/#{params[:id]}/edit" %>
</p>

<p>
  <i class="fa-solid fa-trash"></i>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</p>
